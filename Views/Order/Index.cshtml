@model ChapeauHerkansing.Models.Menu

@{
    ViewData["Title"] = $"{ViewData["MenuType"]} Menu";
}

<div class="container" style="max-width: 500px; padding: 1rem;">
    <h2 class="text-center fw-bold mb-4 text-capitalize">@ViewData["MenuType"] Menu</h2>

    <!-- Menu Type Buttons -->
    <div class="d-flex justify-content-around mb-4">
        <form method="get" asp-action="Index" class="w-100">
            <div class="btn-group w-100" role="group">
                <button type="submit" name="menuType" value="lunch" class="btn btn-primary">Lunch</button>
                <button type="submit" name="menuType" value="dinner" class="btn btn-primary">Dinner</button>
                <button type="submit" name="menuType" value="drinks" class="btn btn-primary">Drinks</button>
            </div>
        </form>
    </div>

    <!-- Menu Items -->
    <div id="menuContent">
        @foreach (var category in Model.MenuItems.GroupBy(i => i.Category))
        {
            <div class="mb-4">
                <h3 class="text-center text-secondary fw-bold text-capitalize">@category.Key</h3>
                <div class="row g-3">
                    @foreach (MenuItem item in category)
                    {
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="card-title mb-1">@item.Name</h5>
                                        <p class="card-text text-muted mb-0">€ @item.Price.ToString("0.00")</p>
                                    </div>
                                    <button class="btn btn-success btn-sm">Add</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>