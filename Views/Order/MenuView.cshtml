@model ChapeauHerkansing.Models.Menu

<h2 class="text-center text-capitalize mb-4">@ViewData["MenuType"] Menu</h2>

<div class="container mt-4" style="max-width: 800px;">
    <!-- Menu Type Buttons -->
    <form method="get" asp-action="Index" class="d-flex justify-content-center mb-4">
        <div class="btn-group w-100" role="group">
            <button type="submit" name="menuType" value="lunch" class="btn btn-primary">Lunch</button>
            <button type="submit" name="menuType" value="dinner" class="btn btn-primary">Dinner</button>
            <button type="submit" name="menuType" value="drinks" class="btn btn-primary">Drinks</button>
            <button type="submit" class="btn btn-secondary">Back to Order</button>
        </div>
    </form>

    <!-- Menu Items -->
    <h3 class="text-center mb-3">Available Menu</h3>
    <ul class="list-group shadow-sm rounded">
        @foreach (MenuItem item in Model.MenuItems)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center py-2 px-3">
                <!-- Name and Badge (inline with space) -->
                <div class="d-flex align-items-center flex-grow-1 text-wrap" style="min-width: 0;">
                    <span class="fw-bold me-2">@item.Name</span>
                    @if (item.IsAlcoholic)
                    {
                        <span class="badge bg-danger ms-2">Alcoholic</span>
                    }
                </div>

                <!-- Price and Add Button -->
                <div class="d-flex align-items-center text-nowrap">
                    <span class="text-muted me-3">€ @item.Price.ToString("0.00")</span>
                    <form method="post" asp-action="AddToOrder" class="d-inline">
                        <input type="hidden" name="menuItemId" value="@item.MenuItemID" />
                        <button type="submit" class="btn btn-success btn-sm">Add</button>
                    </form>
                </div>
            </li>
        }
    </ul>
</div>