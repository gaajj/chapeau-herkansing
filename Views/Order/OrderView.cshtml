@model ChapeauHerkansing.Models.Order

<h2 class="text-center">Order Summary for Table @Model.Table.TableID</h2>

<!-- Toggleable Menu Buttons (Form Submission) -->
<div class="container mt-4" style="max-width: 800px;">
    <div class="d-flex justify-content-center mb-3">
        <form method="get" asp-action="Index" class="w-100">
            <input type="hidden" name="tableId" value="@Model.Table.TableID" />
            <div class="btn-group w-100" role="group">
                <button type="submit" name="menuType" value="lunch" class="btn btn-primary">Lunch</button>
                <button type="submit" name="menuType" value="dinner" class="btn btn-primary">Dinner</button>
                <button type="submit" name="menuType" value="drinks" class="btn btn-primary">Drinks</button>
            </div>
        </form>
    </div>

    <!-- Order Items (Styled like Menu Items) -->
    <h3 class="text-center">Current Order</h3>
    <ul class="list-group">
        @foreach (OrderLine line in Model.OrderLines)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <!-- Amount (All the way left) -->
                <div class="d-flex align-items-center me-3">
                    <span class="badge bg-primary rounded-pill me-2">@line.Amount</span>
                </div>

                <!-- Item Name and Note (Middle) -->
                <div class="flex-grow-1 text-wrap me-3" style="min-width: 0;">
                    <div class="fw-bold">@line.MenuItem.Name</div>
                    @if (!string.IsNullOrEmpty(line.Note))
                    {
                        <small class="text-muted">@line.Note</small>
                    }
                </div>

                <!-- Edit Button (Only if Note) and Remove Button (Right) -->
                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(line.Note))
                    {
                        <form method="post" asp-action="EditOrderLine" class="d-inline me-2">
                            <input type="hidden" name="orderLineId" value="@line.OrderLineID" />
                            <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                        </form>
                    }
                    <form method="post" asp-action="RemoveOrderLine" class="d-inline">
                        <input type="hidden" name="orderLineId" value="@line.OrderLineID" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </div>
            </li>
        }
    </ul>
</div>