@using ChapeauHerkansing.Models.Enums
@model ChapeauHerkansing.ViewModels.Management.StaffEditViewModel

@{
    ViewData["Title"] = "Medewerker Bewerken";
    var roleOptions = new SelectList(new[] { "Manager", "Chef", "Waiter", "Bartender" }, Model.Role);
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">Voornaam</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Achternaam</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label">Gebruikersnaam</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">New Password (leave empty to keep current)</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Role" class="form-label">Rol</label>
        <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<Role>()"></select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsDeleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsDeleted" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
