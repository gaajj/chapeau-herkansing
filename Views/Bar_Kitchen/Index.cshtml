@{
    ViewData["Title"] = "Kitchen Overview";
}

@model List<ChapeauHerkansing.Models.Order>

<div class="text-center">
<h1 class="display-4">Welcome</h1>
</div>


<div class="container mt-4 p-3 border border-primary rounded">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <img src="~/images/logo.png" alt="Chapeau" style="height: 50px;">
        <h2 class="fw-bold text-center flex-grow-1">Kitchen Orders</h2>
        <button class="btn btn-warning">Mara</button>
    </div>

    <table class="table table-bordered text-center">
        <thead class="bg-warning text-dark">
            <tr>
                <th>Order ID</th>
                <th>Order number</th>
                <th>Count</th>
                <th>Description</th>
                <th colspan="2">Change order status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.TableID</td>
                    <td>@order.Feedback</td>
                    <td>@order.IsDeleted</td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center gap-2">
                            <input type="text" value="@order.TableID" class="form-control text-center w-50" readonly />
                            <button class="btn btn-warning">Prepared</button>
                            <button class="btn btn-success">Served</button>
                        </div>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4" class="bg-warning text-dark text-center fw-bold">View order status</td>
                <td colspan="2" class="text-start">
                    <div class="d-flex justify-content-between">
                        <span>Selected order ID</span>
                        <span>Order status</span>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>